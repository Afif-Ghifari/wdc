---
import "../styles/component.scss";
import "../styles/ragam-wisata.scss";
import MainLayout from "../layouts/main-layout.astro";
import RagamWisataPage from "../layouts/ragam-wisata.vue";
---

<MainLayout
  description="Mengungkap kekayaan wisata, pemandangan alam, hingga atraksi budaya yang memukau di setiap tujuan wisata."
  title="Ragam Wisata"
>
  <RagamWisataPage client:load />
</MainLayout>
<script type="text/javascript">
document.addEventListener("DOMContentLoaded", function () {
  new Splide(".splide__1", {
    autoplay: true,
    drag: "free",
    perPage: 1,
    snap: true,
    type: "loop",
  }).mount();
});
</script>