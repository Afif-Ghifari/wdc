---
import "../../public/scss/component.scss";
import "../../public/scss/pendidikan.scss";
import MainLayout from "../layouts/main-layout.astro";
import PendidikanPage from "../layouts/pendidikan.vue";
---

<MainLayout
  description="Temukan berita terkini, pilihan kampus, hingga cerita inspiratif dari dunia pendidikan."
  title="Pendidikan"
>
  <PendidikanPage />
</MainLayout>
<script type="text/javascript">
document.addEventListener("DOMContentLoaded", function () {
  new Splide(".splide__1", {
    drag: "free",
    perPage: 2,
    type: "loop",
    autoScroll: {
      speed: 1,
    },
  }).mount(window.splide.Extensions);
  new Splide(".splide__2", {
    drag: "free",
    perPage: 2,
    snap: true,
    type: "loop",
  }).mount();
});
</script>